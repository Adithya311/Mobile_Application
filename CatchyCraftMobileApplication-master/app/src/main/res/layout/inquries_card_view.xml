<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    android:clickable="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="4dp">

        <!--Textview for displaying our Course Name-->

        <ImageView
            android:id="@+id/image_view_inquiries"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_height="104dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />


      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/first"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="2dp"
              android:text="Title :"
              android:textColor="@color/purple_500"
              android:textSize="18sp"
              android:textStyle="bold" />
          <TextView
              android:id="@+id/inquirie_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="2dp"
              android:text="date"
              android:textColor="@color/purple_500"
              android:textSize="18sp"
              android:textStyle="bold" />
      </LinearLayout>

        <!--Textview for displaying our Course Duration-->
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/promotion_amount_field"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="2dp"
               android:text="Discription :"
               android:textColor="@color/black" />

           <TextView
               android:id="@+id/inquirie_discription"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="2dp"
               android:text="reason"
               android:textColor="@color/black" />
       </LinearLayout>

        <!--Textview for displaying our Course Description-->


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:text="Contact :"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/inquirie_contact_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="amount"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>